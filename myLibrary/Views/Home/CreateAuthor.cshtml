@model myLibrary.Models.Author
@{
    ViewBag.Title = "Добавление автора";
}
<form asp-action="createauthor" asp-controller="home">
   

    <div class="form-group">
        <label asp-for="NameAuthor" class="control-label">Имя автора</label>
        <input type="text" asp-for="NameAuthor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="YearBirth" class="control-label">Год рождения</label>
        <input type="text" asp-for="YearBirth" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label">Страна</label>
        <input type="text" asp-for="Country" class="form-control" />
    </div>  

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>