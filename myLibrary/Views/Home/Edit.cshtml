@model myLibrary.Models.Lib
@{
    ViewBag.Title = "Редактирование Книги";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.BookId">

    <div class="editor-field">
        @Html.EditorFor(model => model.AuthorId)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.BookId)
    </div>
    <div class="form-group">
        <label asp-for="Book.NameBook" class="control-label">Название Книги</label>
        <input type="text" asp-for="Book.NameBook" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author.NameAuthor" class="control-label">Имя Автора</label>
        <input type="text" asp-for="Author.NameAuthor" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>