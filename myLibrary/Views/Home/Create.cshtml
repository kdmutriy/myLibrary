@model myLibrary.Models.Book
@{
    ViewBag.Title = "Добавление";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label">Имя автора</label><br />
            @Html.DropDownListFor(m => m.AuthorId, ViewBag.Authors as SelectList) <a asp-action="CreateAuthor">Добавить автора</a>
       
    </div>
    
    <div class="form-group">
        <label asp-for="NameBook" class="control-label">Название книги</label>
        <input type="text" asp-for="NameBook" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="YearPublish" class="control-label">Год публикации</label>
        <input type="text" asp-for="YearPublish" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Publisher" class="control-label">Название издательства</label>
        <input type="text" asp-for="Publisher" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CountPage" class="control-label">Количество страниц</label>
        <input type="text" asp-for="CountPage" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>