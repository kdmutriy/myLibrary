@model myLibrary.Models.Book
@{
    ViewBag.Title = "Редактирование Книги";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="NameBook" class="control-label">Название Книги</label>
        <input type="text" asp-for="NameBook" class="form-control" />
    </div>
    <div class="form-group">
        @foreach (var item in Model.Lib.Select(a => a.Author))
        {
        <label asp-for="@item.NameAuthor" class="control-label">Имя Автора</label>
        <input type="text" asp-for="@item.NameAuthor" class="form-control" />
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>